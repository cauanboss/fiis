{
    "name": "fii-analyzer",
    "version": "1.0.0",
    "description": "Analisador de Fundos Imobili√°rios - Encontre os melhores FIIs para investir",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "bun run src/index.ts",
        "dev": "bun --watch src/index.ts",
        "web": "bun run src/web/server.ts",
        "build": "bun build src/index.ts --outdir dist",
        "test": "bun test",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts",
        "db:generate": "prisma generate --schema=src/infrastructure/database/prisma/schema.prisma",
        "db:push": "prisma db push --schema=src/infrastructure/database/prisma/schema.prisma",
        "db:migrate": "prisma migrate dev --schema=src/infrastructure/database/prisma/schema.prisma",
        "db:studio": "prisma studio --schema=src/infrastructure/database/prisma/schema.prisma"
    },
    "prisma": {
        "schema": "src/infrastructure/database/prisma/schema.prisma"
    },
    "keywords": [
        "fii",
        "fundos-imobiliarios",
        "investimentos",
        "analise",
        "dividendos",
        "brasil"
    ],
    "author": "FII Analyzer Team",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^6.11.1",
        "@types/better-sqlite3": "^7.6.13",
        "axios": "^1.7.9",
        "better-sqlite3": "^12.2.0",
        "bun": "^1.2.18",
        "chalk": "^5.3.0",
        "cheerio": "^1.0.0-rc.12",
        "commander": "^12.0.0",
        "dotenv": "^16.3.1",
        "ora": "^7.0.1",
        "prisma": "^6.11.1",
        "puppeteer": "^24.0.0",
        "table": "^6.8.1",
        "express": "^4.21.2"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "eslint": "^8.51.0",
        "prettier": "^3.0.3",
        "typescript": "^5.7.2"
    }
}